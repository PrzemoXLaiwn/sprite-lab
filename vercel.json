{
  "framework": "nextjs",
  "buildCommand": "rm -rf .next && npm run build",
  "installCommand": "rm -rf node_modules/.cache && npm ci",
  "crons": [
    {
      "path": "/api/cron/analyze",
      "schedule": "*/2 * * * *"
    },
    {
      "path": "/api/cron/emails",
      "schedule": "0 10 * * *"
    }
  ],
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "sprite-lab.vercel.app"
        }
      ],
      "destination": "https://www.sprite-lab.com/:path*",
      "permanent": true
    }
  ]
}
